@using StackExchange.Profiling;
<!DOCTYPE html>
<html ng-app="flurfunk">
<head>
    @* optional (enable client timing framework) *@
    @this.InitClientTimings()
    <meta charset="utf-8" />
    <title>Flurfunk @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript">
        var app = {
            ajax: {},
            baseUrl: '@Html.Raw(HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + HttpContext.Current.Request.ApplicationPath+"/")',
            angular: {},
            init: function () {
                console.log("app init");
            }
        };
    </script>
    @Scripts.Render("~/bundles/app")

    <style>
        body {
            padding-top: 120px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a>
                <a class="brand" href="@Url.Action("Index", "Home")">
                    <h1><i class="icon-group" style="margin-right: 10px"></i>Flurfunk</h1>
                </a>
                <div class="nav-collapse collapse">
                    <ul class="nav" style="margin-top: 28px">                        
                       @* <li><a href="#">Team</a> </li>*@
                    </ul>
                </div>
                <ul class="nav" style="margin-left: 300px">                    
                    <li><a href="https://github.com/oliverguhr/flurfunk" title="Der Code auf GitHub"><i class="icon-github"></i></a> </li>                    
                    <li><a href="http://twitter.com/oliverguhr" title="Oliver bei Twitter"><i class="icon-twitter"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderSection("featured", required: false)

        @RenderBody()
        <br />
        <footer class="footer">
            <p>
                @DateTime.Now.Year - Flurfunk
                <br />
                Based on <a href="http://talkslab.github.com/metro-bootstrap/">MetroBootstrap</a> from <a href="http://twitter.com/talkslab" target="_blank">talkslab</a>.
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @MiniProfiler.RenderIncludes()
</body>
</html>
